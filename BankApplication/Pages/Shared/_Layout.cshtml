<!-- _Layout.cshtml -->

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] Set Pizza Shop</title>

    <link rel="stylesheet" href="~/css/site.css" />

    <!-- Include your CSS files or CDN links here -->
    <link href="~/favicon.ico" rel="shortcut icon" type="image/x-icon" />

    <style>
        /* styles go here */
        body {
            font-family: 'Times New Roman', Times, serif, sans-serif;
            font-weight: bold;
            margin: 0;
            padding: 0;
            background-color: aqua;
            display: flex;
            flex-direction: column;
            min-height: 100vh;
            margin-left: 20px;
        }

        .header, .footer {
            background-color: darkblue; /* Blue background color */
            color: #ffffff; /* White text color */
            text-align: center;
            padding: 10px;
        }

        .footer {
            position: fixed;
            bottom: 0;
            width: 100%;
        }

        .content {
            padding: 20px;
            background-color: aqua;
        }

        .search-bar {
            margin-right: auto; /* Push the search bar to the left */
            text-align: right;
        }

        #main-content {
            margin-left: 20px;
        }

        .submitButtons {
            width: auto;
            margin-top: 30px;
            font-family: 'Times New Roman', Times, serif;
            font-weight: bold;
            font-size: 16px;
            color: white;
            background-color: darkblue; /* Set the button background color */
            border: none; /*the button border  */
            padding: 10px 20px;
        }

        .headerTitles {
            font-family: 'Times New Roman', Times, serif;
            font-weight: bold;
            font-size: 22px;
            color: white;
        }

        .bodyTitles {
            font-family: 'Times New Roman', Times, serif;
            font-weight: bold;
            font-size: 26px;
            color: black;
        }

        #username, #password {
            width: 550px; /*  width for the user and pss boxes*/
        }

        /* Additional styling for the input boxes  */
        .form-group {
            margin-bottom: 15px;
        }

        .main-header {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px;
            background-color: #007BFF; /* Blue background color */
            color: #ffffff; /* White text color */
        }

        .main-navigation ul {
            list-style: none;
            margin: 0;
            padding: 0;
            display: flex;
        }

        .main-navigation li {
            margin: 0 10px;
        }

        .main-navigation .left {
            margin-right: auto; /* Push items to the left */
        }

        .accordion-body ul {
            padding: 0;
            margin: 130px 100px 110px 110px;
            float: right;
        }
    </style>

    <environment include="Development">
        <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    </environment>
    <environment exclude="Development">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/css/bootstrap.min.css"
              integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm"
              crossorigin="anonymous" />
    </environment>
</head>
<body>
    <header class="header">
        <div class="headerTitles">
            Wealth Wave Bank
        </div>
        <div class="search-bar">
            <form method="get" action="/Search">
                <input type="text" name="query" placeholder="Search..." />
                <button type="submit">Search</button>
            </form>
        </div>


        <div class="logo">Bank Logo</div>

        <nav class="main-navigation">
            <ul>

                <li class="left"><a href="/">Home</a></li>
                <li class="right"><a href="/help">Help</a></li>
                <li class="right"><a href="/services">Services</a></li>
            </ul>
        </nav>
    </header>
    <div class="user-profile">
        <!-- Display user profile or login/logout options -->
    </div>
    <div class="notifications">
        <!-- Display notifications or alerts -->
    </div>

    <div id="main-content">
        @RenderBody()
    </div>


    <footer class="footer">
        <div class="headerTitles">
            <p>&copy: @DateTime.Now.Year: Wealth Wave Bank</p>
        </div>

    </footer>

    <environment include="Development">
        <script src="~/lib/jquery/dist/jquery.js"></script>
        <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.js"></script>
    </environment>
    <environment exclude="Development">
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"
                integrity="sha384-KJ3o2DKtIkvYIK3UENzmM7KCkRr/rE9/Qpg6aAZGJwFDMVNA/GpGFF93hXpG5KkN"
                crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta2/dist/js/bootstrap.bundle.min.js"
                integrity="sha384-pzjw8LD+3ds6ZLkfi8fYgWPItLM2MZ6nBuCe0ACg8rhOc9z+q4Bq4w1JckKT2D5g"
                crossorigin="anonymous"></script>
    </environment>

</body>
</html>
